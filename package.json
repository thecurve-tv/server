{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "lint": "prettier -u -c src/**/*",
    "format": "prettier -u --write src/**/*",
    "prebuild": "rm -rf build",
    "build": "tsc",
    "postbuild": "cp app.yaml package*.json build && echo Build complete. You may now create a .env file in the build directory.",
    "setup-node": "set NODE_OPTIONS='--unhandled-rejections=strict --trace-deprecation'",
    "test": "ts-node --transpile-only test/run-tests",
    "start": "npm run setup-node && node .",
    "start:test": "npm run setup-node && ts-node --transpile-only test/start-test-server"
  },
  "dependencies": {
    "@google-cloud/pubsub": "^2.14.0",
    "@thecurve-tv/express-utils": "^1.0.7",
    "@thecurve-tv/mongo-models": "^1.0.3",
    "apollo-server-express": "^2.24.0",
    "auth0": "^2.34.2",
    "bson": "^4.5.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.10.0",
    "graphql": "^15.5.0",
    "graphql-compose": "^8.0.1",
    "graphql-compose-mongoose": "^9.3.0",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^2.0.2",
    "mongoose": "^5.13.8",
    "morgan": "~1.9.1",
    "rxjs": "^7.1.0"
  },
  "devDependencies": {
    "@tsconfig/node12": "^1.0.9",
    "@types/auth0": "^2.33.3",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jest": "^27.0.3",
    "@types/jsonwebtoken": "^8.5.2",
    "@types/morgan": "^1.9.2",
    "jest": "^27.4.4",
    "jest-circus": "^27.4.4",
    "prettier": "^2.3.0",
    "ts-jest": "^27.1.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
